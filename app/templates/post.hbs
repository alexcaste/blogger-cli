{{#if isEditing}}
  {{partial 'post/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}

<h1>{{title}}</h1>

<h2>by {{author.name}} <small class="muted">{{format-date date}}</small></h2>

<hr>
<div class="body">
  {{ body}}
</div>


{{#each comment in model.comment}}
  <p>
    {{comment.text}}
  </p>
{{/each}}

<p>{{#link-to 'new-comment' this.id class="btn btn-success"}}New Comment{{/link-to}}</p>

{{outlet}}
